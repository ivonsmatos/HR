# .env.example - Copie para .env e preencha com suas vari√°veis

# ============================================
# DJANGO SETTINGS
# ============================================
SECRET_KEY=your-secure-random-key-here-generate-with-django-gen
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ============================================
# DATABASE - PostgreSQL (Multi-tenant)
# ============================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=worksuite_db
DB_USER=postgres
DB_PASSWORD=your-secure-postgres-password
DB_HOST=localhost
DB_PORT=5432

# ============================================
# REDIS - Cache & Background Tasks
# ============================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# EMAIL - SendGrid or SMTP
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# PAYMENT GATEWAYS
# ============================================
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret
RAZORPAY_KEY_ID=your-razorpay-key
RAZORPAY_KEY_SECRET=your-razorpay-secret

# ============================================
# AWS S3 - File Storage (opcional)
# ============================================
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_STORAGE_BUCKET_NAME=worksuite-bucket
AWS_S3_REGION_NAME=us-east-1

# ============================================
# SENTRY - Error Tracking & Monitoring
# ============================================
SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# JWT - Token Authentication
# ============================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# SECURITY
# ============================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================
# CORS - Cross Origin Requests
# ============================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO
ENABLE_DEBUG_TOOLBAR=False

# ============================================
# PWA - Progressive Web App
# ============================================
PWA_ENABLED=True
PWA_OFFLINE_ENABLED=True

# ============================================
# CELERY - Background Jobs
# ============================================
CELERY_ENABLED=True
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# ============================================
# DEVELOPMENT ONLY
# ============================================
ALLOW_DEBUG_IN_PROD=False
INTERNAL_IPS=127.0.0.1
